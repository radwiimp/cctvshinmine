<!--Timelapse Window-->
<div class="modal full fade dark" id="eventCounts" role="dialog" aria-labelledby="eventCountsLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="eventCountsLabel"><i class="fa fa-eye"></i> &nbsp; <span><%-lang['Event Counts']%></span></h4>
        </div>
        <div class="modal-body text-center">
            <div class="row">
                <div class="col-md-4">
                    <div class="fieldHolder form-group-group grey text-left">
                        <h4><%- lang['Search Settings'] %></h4>
                        <div class="form-group">
                          <label><div><span><%-lang['Monitor']%></span></div>
                              <div><select class="form-control dark monitors_list"></select></div>
                          </label>
                        </div>
                        <div class="form-group">
                            <label><div><span><%-lang['Date']%></span></div>
                                <div><input type="text" id="eventCounts_date" class="form-control" value="" /></div>
                            </label>
                        </div>
                    </div>
                    <div class="frameIcons row scroll-style-6"></div>
                </div>
                <div class="col-md-8">
                    <canvas id="eventCounts-chart"></canvas>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%-lang.Close%></button>
            </div>
        </div>
    </div>
  </div>
</div>
